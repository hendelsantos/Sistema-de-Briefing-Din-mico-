// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Form {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  description String?
  clientName  String?      // Nome do cliente para organização
  schema      Json         @default("[]") // Array de perguntas em JSON
  createdAt   DateTime     @default(now())
  submissions Submission[]

  @@map("forms")
}

model Submission {
  id          String   @id @default(cuid())
  formId      String
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  clientEmail String?
  answers     Json     // Respostas do cliente em JSON
  submittedAt DateTime @default(now())

  @@map("submissions")
}
